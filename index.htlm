#!/bin/bash
# AbrahamofLondon Modern Website Deployment Script
# Supports: Static deployment (Netlify/GitHub Pages), Docker WordPress, or local development
# Created: 2025 - Professional Grade Deployment Solution

set -e

echo "╔══════════════════════════════════════════════════════════════════════════════╗"
echo "║                    AbrahamofLondon Website Deployment                        ║"
echo "║                         Professional Setup Tool                              ║"
echo "╚══════════════════════════════════════════════════════════════════════════════╝"
echo ""
echo "Choose your deployment type:"
echo "1) Static Website (Netlify/GitHub Pages/Vercel) - RECOMMENDED"
echo "2) WordPress with Docker (Full CMS)"
echo "3) Local Development Environment"
echo ""
read -p "Enter your choice (1-3): " DEPLOY_TYPE

case $DEPLOY_TYPE in
    1)
        echo "Setting up Static Website for Netlify/GitHub Pages..."
        SETUP_TYPE="static"
        ;;
    2)
        echo "Setting up WordPress with Docker..."
        SETUP_TYPE="wordpress"
        ;;
    3)
        echo "Setting up Local Development Environment..."
        SETUP_TYPE="local"
        ;;
    *)
        echo "Invalid choice. Defaulting to Static Website..."
        SETUP_TYPE="static"
        ;;
esac

# Create project directory
PROJECT_NAME="abrahamoflondon-website"
mkdir -p $PROJECT_NAME
cd $PROJECT_NAME

echo "Created project directory: $PROJECT_NAME"

# Common function to create the modern static website
create_static_website() {
    echo "Creating modern static website structure..."
    
    # Create directory structure
    mkdir -p {assets/{css,js,img,fonts},pages,components,data}
    
    # Create package.json for modern tooling
    cat > package.json << 'EOF'
{
  "name": "abrahamoflondon-website",
  "version": "1.0.0",
  "description": "AbrahamofLondon Professional Superbrand Website",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000",
    "build": "npm run optimize",
    "optimize": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o assets/css/style.min.css assets/css/style.css",
    "minify-js": "uglifyjs assets/js/main.js -o assets/js/main.min.js",
    "deploy": "npm run build"
  },
  "keywords": ["superbrand", "business", "website"],
  "author": "AbrahamofLondon",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4"
  }
}
EOF

